    def get_lowest_ip(self, routes):
        outroutes = []
        min_so_far = 9999999999999
        for route in routes:
            temp = int("".join(route["forward_to"].split(".")))
            if temp < min_so_far:
                min_so_far = temp
        for route in routes:
            temp = int("".join(route["forward_to"].split(".")))
            if temp == min_so_far:
                outroutes = outroutes + [route]
        return outroutes

    def get_route(self, srcif, valid_paths):
        #print(valid_paths)
        """	Select the best route for a given address	"""
        peer = None
        # Rules go here
        if len(valid_paths) > 0:
            # 1. Highest Preference
            valid_paths = self.get_highest_preference(valid_paths)
            #self.debug_helper(valid_paths,"after highest localpref")
            #print("Pref")
            #print(valid_paths)
            # 2. Self Origin
            valid_paths = self.get_self_origin(valid_paths)
            #self.debug_helper(valid_paths,"path after selforigin")
            #print("Self")
            #print(valid_paths)
            # 3. Shortest ASPath
            valid_paths = self.get_shortest_as_path(valid_paths)
            #print("ASPath")
            #print(valid_paths)
            # 4. EGP > IGP > UNK
            valid_paths = self.get_origin_routes(valid_paths)
            #print("Origin")
            #print(valid_paths)
            # 5. Lowest IP Address
            valid_paths = self.get_lowest_ip(valid_paths)
            #print("Lowest")
            #print(valid_paths)
            # Final check: enforce peering relationships
            valid_paths = self.filter_relationships(srcif, valid_paths)
            #print(len(valid_paths) == 1)
            if len(valid_paths) == 1:
                peer = valid_paths[0]
            #else:
                #print("Length of valid_paths")
                #print(len(valid_paths))
        #return self.sockets[peer] if peer else None
        return peer



    def forward(self, srcif, packet):
        """	Forward a data packet	"""

        # Find all the valid places we can forward to
        # Use priority rules to find the one place we should send to
        # In the case that we don't know the location of it, send it back
        #print(self.forward_table)
        valid_path = []
        packet_dest = packet["dst"]

        # For every destination
        for destination in self.forward_table:
            # Find the submask and validate it is a member of the network
            entry_netmask = self.forward_table[destination][0]["final_dest_netmask"]
            in_neighbor_network = (self.bitwise_and(
                packet_dest, entry_netmask) == self.convertIpToBinary(destination))
            # If it is a valid member, it is a valid path
            if in_neighbor_network:
                # Check longest netmask 
                if valid_path:
                    current_netmask = int(self.convertIpToBinary(valid_path[0]["final_dest_netmask"]))
                    new_netmask = int(self.convertIpToBinary(self.forward_table[destination][0]["final_dest_netmask"]))
                    #self.debug_helper(current_netmask, "current_netmask")
                    #self.debug_helper(new_netmask, "new_netmask")

                    if new_netmask > current_netmask:
                        valid_path = self.forward_table[destination]

                else:
                    #If empty, just take it
                    valid_path = self.forward_table[destination]
        # # No matches, we don't know this place so send it back
        if (len(valid_path) == 0):
            print("NO VALID PATH WAS CALLED")
            packet["type"] = "no route"
            packet["dst"] = packet["src"]
            packet["msg"] = {}
            src = srcif.split(".")
            src[-1] = str(int(src[-1]) -1)
            packet["src"] = ".".join(src)
            self.forward(srcif, packet)
            return
        
        #best_location = self.find_priority(valid_path)
        best_location = self.get_route(srcif, valid_path)
        if (best_location):
            self.sockets[best_location["forward_to"]].send(json.dumps(packet).encode())
        else:
            packet["type"] = "no route"
            packet["dst"] = packet["src"]
            packet["msg"] = {}
            src = srcif.split(".")
            src[-1] = str(int(src[-1]) -1)
            packet["src"] = ".".join(src)
            #print(packet)
            self.sockets[srcif].send(json.dumps(packet).encode())
        return

    def bitwise_and(self, ip_address_1, ip_address_2):
        list_of_numbers_1 = ip_address_1.split(".")
        list_of_numbers_2 = ip_address_2.split(".")
        list_of_binary_1 = ''.join(
            map(lambda num: '{0:08b}'.format(int(num)), list_of_numbers_1))
        list_of_binary_2 = ''.join(
            map(lambda num: '{0:08b}'.format(int(num)), list_of_numbers_2))
        final_bitwise = ''

        for x in range(len(list_of_binary_1)):
            num_binary_1 = int(list_of_binary_1[x])
            num_binary_2 = int(list_of_binary_2[x])
            final_bitwise = final_bitwise + str(num_binary_1 & num_binary_2)
        return final_bitwise

    def convertIpToBinary(self, ip_address):
        list_of_numbers = ip_address.split(".")
        list_of_binary = map(
            lambda num: '{0:08b}'.format(int(num)), list_of_numbers)
        return ''.join(list_of_binary)

    def convertBinaryToIp(self, binary_string):
        ip_nums = []
        ip_nums.append(str(int(binary_string[0:8],2)))
        ip_nums.append(str(int(binary_string[8:16],2)))
        ip_nums.append(str(int(binary_string[16:24],2)))
        ip_nums.append(str(int(binary_string[24:32],2)))
        return ".".join(ip_nums)

    # return true or false. true indicating something coalesced, false if nothing coalecsed so no need to check
    def coalesce(self):
        """	coalesce any routes that are right next to each other	"""
        # TODO (this is the most difficult task, save until last)
        #dict key is hop port, value is destinations that will be forward to that hop
        hop_dict = {}
        for destination in self.forward_table:
            route_info ={}
            route_info["destination"] = destination
            route_info["netmask"] = self.forward_table[destination][0]["final_dest_netmask"]
            route_info["localpref"] = self.forward_table[destination][0]["localpref"]
            route_info["route_selforigin"] = self.forward_table[destination][0]["route_selforigin"]
            route_info["ASPath"] = self.forward_table[destination][0]["ASPath"]
            route_info["origin"] = self.forward_table[destination][0]["origin"]
            if self.forward_table[destination][0]["forward_to"] not in hop_dict:
                hop_dict[self.forward_table[destination][0]["forward_to"] ] = [route_info]
            else:
                hop_dict[self.forward_table[destination][0]["forward_to"] ].append(route_info)

        for hop_ip in hop_dict:
            list_dest = hop_dict[hop_ip]
            for index in range(len(list_dest)-1):
                checking_dest = list_dest[index]
                for second_dest in list_dest[index+1:]:
                    if (checking_dest["netmask"] == second_dest["netmask"]) and (checking_dest["localpref"] == second_dest["localpref"]) and (checking_dest["route_selforigin"] == second_dest["route_selforigin"]) and (checking_dest["ASPath"] == second_dest["ASPath"]) and (checking_dest["origin"] == second_dest["origin"]):
                        first_ip = checking_dest["destination"]
                        second_ip = second_dest["destination"]
                        
                        section_not_equal = -1
                        break_out = False
                        first_split = first_ip.split(".")
                        second_split = second_ip.split(".")
                        for x in range(4):
                            if first_split[x] != second_split[x] and section_not_equal > -1:
                                break_out = True
                            elif first_split[x] != second_split[x]:
                                section_not_equal = x

                        #print("section not equal " + str(section_not_equal))
                        if break_out:
                            continue

                        first_section_binary = '{0:08b}'.format(int(first_split[section_not_equal]))
                        second_section_binary = '{0:08b}'.format(int(second_split[section_not_equal]))
                        #print("first ip binary " + str(first_section_binary))
                        #print("second ip binary" + str(second_section_binary))
                        index_of_difference = -1
                        for x in range(len(first_section_binary)):
                            if first_section_binary[x] != second_section_binary[x] and index_of_difference > -1:
                                break_out
                            elif first_section_binary[x] != second_section_binary[x]:
                                index_of_difference = x

                        #print("index of difference is " + str(index_of_difference))
                        if break_out:
                            continue

                        new_netmask = "1" * 8 * section_not_equal + "1" * index_of_difference + "0" * (8- index_of_difference) + "0" * 8 * (3 - section_not_equal)
                        #final_new_netmask = new_netmask[0:8] + "." + new_netmask[8:16] + "." + new_netmask[16:24] + "." + new_netmask[24:32]
                        final_new_netmask = self.convertBinaryToIp(new_netmask)
                        #print("first_ip" + str(first_ip) )
                        #print("second_ip " +str(second_ip))
                        new_destination_binary = self.bitwise_and(first_ip, final_new_netmask)
                        new_destination_ip = self.convertBinaryToIp(new_destination_binary)
                        #print("new dest ip binary" + str(new_destination_binary))
                        #print(new_destination_ip)
                        #print(final_new_netmask)

                        #print (self.forward_table[first_ip])
                        for route in self.forward_table[first_ip]:
                            route["final_dest_netmask"] = str(final_new_netmask)
                        #print(self.forward_table[first_ip])
                        #self.forward_table[str(new_destination_ip)] = self.forward_table[first_ip]
                        
                        self.forward_table[str(new_destination_ip)] = self.forward_table.pop(first_ip)
                        if new_destination_ip != second_ip:
                            self.forward_table.pop(second_ip)
                        #print("==================after coal================")
                        #print(self.forward_table)
                        #print("==============================================")
                        return True
                        #self.forward_table[new_destination_ip] = self.forward_table[first_ip]
                        #self.forward_table[new_destination_ip][0]["final_dest_netmask"] = final_new_netmask
                        #del self.forward_table[first_ip]
                        #del self.forward_table[second_ip]



                        #split by period
                        #see if only one section not equal and need be same in both
                        # convert to binary that section
                        # find nad check if only one bit differ
                        # make new netmask



        return False



    def update(self, srcif, packet):
        """	handle update packets	"""
        self.update_packets_history.append(packet)
        packet_msg = packet["msg"]
        final_dest_ip = packet_msg["network"]
        route_info = {}
        route_info["forward_to"] = packet["src"]
        route_info["final_dest_netmask"] = packet_msg["netmask"]
        route_info["localpref"] = packet_msg["localpref"]
        route_info["route_selforigin"] = packet_msg["selfOrigin"]
        route_info["ASPath"] = packet_msg["ASPath"]
        route_info["origin"] = packet_msg["origin"]


        # Forwarding table is of type Destination: array of Route information
        if final_dest_ip not in self.forward_table:
            self.forward_table[final_dest_ip] = []
            self.forward_table_backup[final_dest_ip] = []

        self.forward_table[final_dest_ip] = self.forward_table[final_dest_ip] + [route_info]

        continue_coal = True
        while continue_coal:
            continue_coal = self.coalesce()

        ## CHECK for aggregation in key, not network
        


        # if len(self.forward_table[final_dest_ip]) == 0:
        #     self.forward_table[final_dest_ip] = self.forward_table[final_dest_ip] + [route_info]
        # else:
        #     for entry in self.forward_table[final_dest_ip]:
        #         self.debug_helper(self.bitwise_and(packet_msg["network"], packet_msg["netmask"]), "packet")
        #         self.debug_helper(self.bitwise_and(entry["network"], entry["netmask"]), "entry")
        #         if self.bitwise_and(packet_msg["network"], packet_msg["netmask"]) ^ self.bitwise_and(entry["network"], entry["netmask"]) == 1:
        #             print("shit code")
        #             entry = self.mergeRoutes(entry)
        # self.forward_table_backup[final_dest_ip] = self.forward_table_backup[final_dest_ip] + [route_info]
        
        router = packet["dst"]
        for sock in self.sockets:
            if sock != srcif:
                packet["src"] = router
                packet["dst"] = sock
                socket = self.sockets[sock]
                if (self.relations[srcif] == 'cust'):
                    socket.send(json.dumps(packet).encode())
                else:
                    if (self.relations[sock] == 'cust'):
                        socket.send(json.dumps(packet).encode())
        #print(self.forward_table)
        return False

    def mergeRoutes(self, entry):
        split = entry["network"].split(".")
        split.reverse()
        changed = False
        # Change the most right non 0 value to 0
        for value in split:
            if not changed and int(value) != 0:
                changed = True
                value = "0"
        split.reverse()
        network = "".join(split)
        entry["network"] = network
        # Remove last 1 from netmask
        split = entry["netmask"].split(".")
        split.reverse()
        changed = False
        for value in split:
            if not changed and int(value) != 0:
                ip = self.convertIpToBinary(value).split("")
                ip.reverse()
                for num in ip:
                    if not changed and int(num) != 0:
                        num = "0"
                        changed = True
                ip.reverse()
                ip.insert(8, ".")
                ip.insert(17,".")
                ip.insert(26,".")
                ip.split(".")
                for segment in ip:
                    segment = int(segment, 2)
                ip_new = ".".join(ip)
                entry["netmask"] = ip_new
                return
        return
                

            

    def revoke(self, srcif, packet):
        """	handle revoke packets	"""
        # Array of networks/netmask
        msg = packet["msg"]
        src = packet["src"]
        dst = packet["dst"]

        for entry in msg:
            network = entry["network"]
            if network not in self.forward_table:
                self.disaggregate(srcif,network)
            elif len(self.forward_table[network]) == 1:
                del self.forward_table[network]
            else:
                self.forward_table[network] = self.delete_entries_going_to_ip(self.forward_table[network], src)
        router = packet["dst"]
        for sock in self.sockets:
            if sock != src:
                packet["src"] = router
                packet["dst"] = sock
                socket = self.sockets[sock]
                if (self.relations[src] == 'cust'):
                    socket.send(json.dumps(packet).encode())
                else:
                    if (self.relations[sock] == 'cust'):
                        socket.send(json.dumps(packet).encode())
        
        return False

    def disaggregate(self,srcif, network):
        new_update_history = []

        for update in self.update_packets_history:
            if update["msg"]["network"] != network:
                new_update_history.append(update)

        self.update_packets_history = new_update_history
        self.forward_table = {}
        for update in self.update_packets_history:
            self.update(srcif, update)

    def delete_entries_going_to_ip(self,routes, ip_to_remove):
        newEntry = []
        for route in routes:
            route_going_to_ip = route["forward_to"]
            if route_going_to_ip != ip_to_remove:
                newEntry.append(route)
        return newEntry

    def dump(self, packet):
        """ handles dump table requests """
        table_msg = {}
        table_msg["src"] = packet["dst"]
        table_msg["dst"] = packet["src"]
        table_msg["type"] = "table"
        table_list = []
        for dest in self.forward_table:
            for route in self.forward_table[dest]:
                entry = {}
                entry["network"] = dest
                entry["netmask"] = route["final_dest_netmask"]
                entry["peer"] = route["forward_to"]
                table_list.append(entry)
        table_msg["msg"] = table_list

        self.sockets[table_msg["dst"]].send(json.dumps(table_msg))

